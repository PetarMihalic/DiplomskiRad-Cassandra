@page
@using SneakerShopCassandra.Pages.Inventories;
@model EditModel

<h1>Edit inventory</h1>

<hr />
<div class="row">
    <div class="col-md-5">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Inventory.ID" />
            <input type="hidden" asp-for="Inventory.SneakerID" />
            <input type="hidden" asp-for="Inventory.Size" />
            <dl class="row">
            <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Inventory.SneakerID)
            </dt>
            <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Inventory.SneakerID)
            </dd>
            <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Inventory.Size)
            </dt>
            <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Inventory.Size)
            </dd>
            <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Inventory.Quantity)
            </dt>
            <dd class="col-sm-3">
                    <input asp-for="Inventory.Quantity" class="form-control" />
                    <span asp-validation-for="Inventory.Quantity" class="text-danger"></span>
            </dd>
            </dl>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Cancel</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
