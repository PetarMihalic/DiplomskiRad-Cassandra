@page
@using SneakerShopCassandra.Pages.Inventories;
@model CreateModel

<h1>Add to inventory</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Inventory.SneakerID" class="control-label">Sneaker Name</label>
                <select asp-for="Inventory.SneakerID" class ="form-control" asp-items="ViewBag.Name"></select>
            </div>
            <div class="form-group">
                <label asp-for="Inventory.Size" class="control-label"></label>
                <input asp-for="Inventory.Size" class="form-control" />
                <span asp-validation-for="Inventory.Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Inventory.Quantity" class="control-label"></label>
                <input asp-for="Inventory.Quantity" class="form-control" />
                <span asp-validation-for="Inventory.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br />
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Cancel</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
