@page
@using SneakerShopCassandra.Pages.Sneakers;
@model DeleteModel

@{
    string DisplayImage1 = "data:image;base64," + Convert.ToBase64String(Model.Sneaker.Picture1);
    string DisplayImage2 = "data:image;base64," + Convert.ToBase64String(Model.Sneaker.Picture2);
}

<h1>Delete sneaker</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sneaker.Brand)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sneaker.Brand)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sneaker.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sneaker.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sneaker.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sneaker.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sneaker.Picture1)
        </dt>
        <dd class="col-sm-10">
            <img src="@DisplayImage1" style="height:5em; object-fit:scale-down;" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sneaker.Picture2)
        </dt>
        <dd class="col-sm-10">
            <img src="@DisplayImage2" style="height:5em; object-fit:scale-down;" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sneaker.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sneaker.Price)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Sneaker.ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="/Index">Cancel</a>
    </form>
</div>
